{% extends 'base.html.twig' %}

{% block title %}S'enregistrer !{% endblock %}

{% block body %}
    {% if error %}
        <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
    {% endif %}

    {% if app.user %}
        <div class="mb-3">
            T'es déjà connecté {{ app.user.pseudo }}, <a href="{{ path('app_logout') }}">ici pour te déco</a>
        </div>
    {% endif %}


<div style="height:75vh">
  <div class="align-items-center mt-5">
    <div class="d-flex justify-content-center">
      <form method="post">
        <div class="bg-light p-4 rounded" style="max-width:28em">
          <h1 class="h3 mb-3 font-weight-normal text-center">Bonjour !</h1>

          <p class="text-center">Connectez-vous pour découvrir toutes nos fonctionnalités.</p>

          <div class="mb-2">
            <label for="email" class="form-label">E-mail</label>
            <input type="email" value="{{ last_username }}" class="form-control" id="email" name="email" autocomplete="email" required autofocus>
          </div>
          <div class="mb-4">
            <label for="password" class="form-label">Mot de passe</label>
            <input type="password" class="form-control" id="password" name="password" autocomplete="current-password" required>
          </div>

          <input type="hidden" name="_csrf_token"
          value="{{ csrf_token('authenticate') }}"
          >

          <div class="vstack mx-auto mb-3">
            <button class="btn btn-outline-primary" type="submit">
              Se connecter
            </button>
          </div>

          <p class="text-center">Envie de nous rejoindre ?
            <a class="text-decoration-none" href="{{ path('app_register') }}">Créer un compte</a>
          </p>

        </div>
      </form>
    </div>
  </div>
</div>
{% endblock %}

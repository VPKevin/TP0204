  {# CSRF #}
  <input type= "hidden" name="csrf" value="{{ csrf_token ('register_form') }}">
  <button type="submit" class="btn btn-prinary w-180">S'inscrire</button>
  <a class="btn btn-lg btn-secondary" href="{{ path('app_login') }}">Se connecter</a>
</form>

{% endblock %}
